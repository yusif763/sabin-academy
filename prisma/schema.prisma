// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Admin User Model
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Course Model (IELTS, Pre-IELTS, General English, etc.)
model Course {
  id          String   @id @default(cuid())
  slug        String   @unique
  image       String?
  icon        String?
  featured    Boolean  @default(false)
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Translations
  translations CourseTranslation[]
}

model CourseTranslation {
  id          String   @id @default(cuid())
  courseId    String
  locale      String   // en, az, ru
  title       String
  description String   @db.Text
  highlights  String[] // Array of key points
  duration    String?
  price       String?
  schedule    String?
  
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  @@unique([courseId, locale])
}

// Summer Camp Model (Most Important)
model SummerCamp {
  id          String   @id @default(cuid())
  slug        String   @unique
  year        Int
  location    String
  startDate   DateTime
  endDate     DateTime
  image       String?
  gallery     String[] // Array of image URLs
  featured    Boolean  @default(false)
  active      Boolean  @default(true)
  spots       Int?     // Available spots
  price       String?
  ageRange    String?  // e.g., "7-15"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Translations
  translations SummerCampTranslation[]
}

model SummerCampTranslation {
  id              String   @id @default(cuid())
  summerCampId    String
  locale          String   // en, az, ru
  title           String
  description     String   @db.Text
  activities      String[] // List of activities
  includes        String[] // What's included
  highlights      String[] // Key highlights
  
  summerCamp      SummerCamp @relation(fields: [summerCampId], references: [id], onDelete: Cascade)
  
  @@unique([summerCampId, locale])
}

// Student Results/Achievements
model Result {
  id          String   @id @default(cuid())
  studentName String
  score       String   // e.g., "7.0" for IELTS
  testType    String   // IELTS, DIM, etc.
  image       String?  // Student photo or certificate
  certificate String?
  featured    Boolean  @default(false)
  date        DateTime
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Translations for testimonials
  translations ResultTranslation[]
}

model ResultTranslation {
  id          String   @id @default(cuid())
  resultId    String
  locale      String   // en, az, ru
  testimonial String?  @db.Text
  courseType  String?  // Course they took
  
  result      Result   @relation(fields: [resultId], references: [id], onDelete: Cascade)
  
  @@unique([resultId, locale])
}

// Gallery for general images
model Gallery {
  id          String   @id @default(cuid())
  title       String?
  image       String
  category    String   // "classroom", "events", "camps", etc.
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Contact Form Submissions
model Contact {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  message     String   @db.Text
  subject     String?
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())
}

// Blog/News Posts
model Post {
  id          String   @id @default(cuid())
  slug        String   @unique
  image       String?
  featured    Boolean  @default(false)
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Translations
  translations PostTranslation[]
}

model PostTranslation {
  id          String   @id @default(cuid())
  postId      String
  locale      String   // en, az, ru
  title       String
  excerpt     String?  @db.Text
  content     String   @db.Text
  
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@unique([postId, locale])
}

// FAQ
model FAQ {
  id          String   @id @default(cuid())
  category    String   // "general", "courses", "registration", etc.
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Translations
  translations FAQTranslation[]
}

model FAQTranslation {
  id          String   @id @default(cuid())
  faqId       String
  locale      String   // en, az, ru
  question    String   @db.Text
  answer      String   @db.Text
  
  faq         FAQ      @relation(fields: [faqId], references: [id], onDelete: Cascade)
  
  @@unique([faqId, locale])
}

// Settings/Configuration
model Settings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
