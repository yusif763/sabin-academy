// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Admin User Model
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Course Model (IELTS, Pre-IELTS, General English, etc.)
model Course {
  id          String   @id @default(cuid())
  slug        String   @unique
  image       String?
  icon        String?
  featured    Boolean  @default(false)
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Translations
  translations CourseTranslation[]
}

model CourseTranslation {
  id          String   @id @default(cuid())
  courseId    String
  locale      String   // en, az, ru
  title       String
  description String   @db.Text
  highlights  String[] // Array of key points
  duration    String?
  price       String?
  schedule    String?
  
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  @@unique([courseId, locale])
}

// Summer Camp Model (Most Important)
model SummerCamp {
  id          String   @id @default(cuid())
  slug        String   @unique
  year        Int
  location    String
  startDate   DateTime
  endDate     DateTime
  image       String?
  featured    Boolean  @default(false)
  active      Boolean  @default(true)
  spots       Int?     // Available spots
  price       String?
  ageRange    String?  // e.g., "7-15"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  gallery     CampGallery[]
  
  // Translations
  translations SummerCampTranslation[]
}

model SummerCampTranslation {
  id              String   @id @default(cuid())
  summerCampId    String
  locale          String   // en, az, ru
  title           String
  description     String   @db.Text
  activities      String[] // List of activities
  includes        String[] // What's included
  highlights      String[] // Key highlights
  
  summerCamp      SummerCamp @relation(fields: [summerCampId], references: [id], onDelete: Cascade)
  
  @@unique([summerCampId, locale])
}

// Student Results/Achievements (image gallery)
model Result {
  id          String   @id @default(cuid())
  image       String   // Result image
  category    String   @default("IELTS") // IELTS, DIM9, DIM11, CAMBRIDGE
  note        String?  // Optional student note/comment
  active      Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Gallery for general images
model Gallery {
  id          String   @id @default(cuid())
  title       String?
  image       String
  category    String   // "classroom", "events", "camps", etc.
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Contact Form Submissions
model Contact {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  message     String   @db.Text
  subject     String?
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())
}

// Blog/News Posts
model Post {
  id          String   @id @default(cuid())
  slug        String   @unique
  image       String?
  featured    Boolean  @default(false)
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Translations
  translations PostTranslation[]
}

model PostTranslation {
  id          String   @id @default(cuid())
  postId      String
  locale      String   // en, az, ru
  title       String
  excerpt     String?  @db.Text
  content     String   @db.Text
  
  post        Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@unique([postId, locale])
}

// FAQ
model FAQ {
  id          String   @id @default(cuid())
  category    String   // "general", "courses", "registration", etc.
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Translations
  translations FAQTranslation[]
}

model FAQTranslation {
  id          String   @id @default(cuid())
  faqId       String
  locale      String   // en, az, ru
  question    String   @db.Text
  answer      String   @db.Text
  
  faq         FAQ      @relation(fields: [faqId], references: [id], onDelete: Cascade)
  
  @@unique([faqId, locale])
}

// Settings/Configuration
model Settings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CampGallery {
  id        String   @id @default(cuid())
  campId    String
  image     String
  order     Int      @default(0)
  createdAt DateTime @default(now())

  camp      SummerCamp @relation(fields: [campId], references: [id], onDelete: Cascade)
}


model Activity {
  id          String   @id @default(cuid())
  slug        String   @unique
  image       String?
  featured    Boolean  @default(false)
  active      Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  translations ActivityTranslation[]
  images       ActivityImage[]
}

model ActivityTranslation {
  id          String   @id @default(cuid())
  activityId  String
  locale      String
  title       String
  description String   @db.Text
  content     String?  @db.Text

  activity    Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)

  @@unique([activityId, locale])
}

model ActivityImage {
  id         String   @id @default(cuid())
  activityId String
  image      String
  caption    String?
  order      Int      @default(0)

  activity   Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
}

// Team Members
model TeamMember {
  id        String   @id @default(cuid())
  name      String
  image     String
  email     String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  translations TeamMemberTranslation[]
}

model TeamMemberTranslation {
  id           String   @id @default(cuid())
  teamMemberId String
  locale       String   // en, az, ru
  position     String   // Job title
  bio          String?  @db.Text

  teamMember   TeamMember @relation(fields: [teamMemberId], references: [id], onDelete: Cascade)

  @@unique([teamMemberId, locale])
}